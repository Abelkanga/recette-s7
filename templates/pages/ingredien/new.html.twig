{% extends "base.html.twig" %}

{% block title %}SymRecipe - Nouveau ingrédient{% endblock %}

{% block body %}
  <div class="jumbotron jumbotron-fluid">
  <div class="card border shadow-sm p-2 w-50 mx-auto" ">
    <div class="row justify-content-center">
      <div class="col">
        <h1 class="mt-4 text-center titre-ingredient">Création d'un ingrédient</h1>

        {{ form_start(form) }}

        <div class="form-group">
          {{ form_label(form.name, 'Nom') }}
          {{ form_widget(form.name, {'class': 'form-control'}) }}
          <div class="form-error">
            {{ form_errors(form.name) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.price, 'Prix') }}
          {{ form_widget(form.price, {'class': 'form-control'}) }}
          <div class="form-error">
            {{ form_errors(form.price) }}
          </div>
        </div>

        <div class="form-group text-center">
          {{ form_row(form.submit, {'class': 'btn btn-primary'}) }}
        </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

{% block stylesheets %}
  <style>

  </style>
{% endblock %}
{% endblock %}
