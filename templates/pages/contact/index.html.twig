{% extends 'base.html.twig' %}

{% block title %}
    SymRecipe - Contact
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Formulaire de contact</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
