{% extends 'base.html.twig' %}

{% block title %}
  SymRecipe - Recette de la communauté
{% endblock %}

{% block body %}
<div class="container mt-4">
  <div class="border p-4">
    {% if not recipe.items is same as ([]) %}
      <h1 class="text-center">Recettes de la communauté</h1>
      <div class="row justify-content-center">
        {% for recipe in recipe %}
        <div class="col-md-4 mb-4">
          <div class="card border-primary">
            <div class="card-header bg-primary text-white">
              Recette n°{{ recipe.id }}
            </div>
            <div class="card-body">
              <h4 class="card-title">
                 <a href="{{ path('recipe_show', {id: recipe.id}) }}"> {{ recipe.name }} </a>
              </h4>
              <p class="card-text">{{ recipe.description |slice(0, 100) ~ '...' }}</p>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="text-center">
        <h4>Il n'y a pas de recettes</h4>
      </div>
    {% endif %}
  </div>
</div>
{% endblock %}


