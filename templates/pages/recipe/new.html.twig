
{% extends "base.html.twig" %}

{% block title %}
  SymRecipe - Nouvelle recette
{% endblock %}

{% block stylesheets %}
  <style>
    .titre-ingredient {
      font-family: Arial, sans-serif;
      font-size: 24px;
      font-weight: bold;
      color: #333;
      text-align: center;
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 20px;
    }

  
    .form-card {
      background-color: #fff;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }
  </style>
{% endblock %} 

{% block body %}
  <div class="jumbotron jumbotron-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="form-container">
        <h1 class="mt-4 text-center titre-ingredient">Création d'une recette</h1>
        {{ form_start(form) }}
        <div class="form-card">
          <h4>Informations principales</h4>
          <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'class': 'form-control'}) }}
            <div class="form-error">{{ form_errors(form.name) }}</div>
          </div>

          <div class="form-group">
            {{ form_label(form.time) }}
            {{ form_widget(form.time, {'class': 'form-control'}) }}
            <div class="form-error">{{ form_errors(form.time) }}</div>
          </div>

          <div class="form-group">
            {{ form_label(form.nbPeople) }}
            {{ form_widget(form.nbPeople, {'class': 'form-control'}) }}
            <div class="form-error">{{ form_errors(form.nbPeople) }}</div>
          </div>

          <div class="form-group">
            {{ form_label(form.difficulty) }}
            {{ form_widget(form.difficulty, {'class': 'form-control'}) }}
            <div class="form-error">{{ form_errors(form.difficulty) }}</div>
          </div>
        </div>

        <div class="form-card">
          <h4>Détails</h4>
          <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'class': 'form-control'}) }}
            <div class="form-error">{{ form_errors(form.description) }}</div>
          </div>

          <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price, {'class': 'form-control'}) }}
            <div class="form-error">{{ form_errors(form.price) }}</div>
          </div>

          <div class="form-group">
            {{ form_label(form.isFavorite) }}
            {{ form_widget(form.isFavorite, {'class': 'form-control'}) }}
            <div class="form-error">{{ form_errors(form.isFavorite) }}</div>
          </div>

          {{ form_row(form.imageFile) }}

          <div class="form-group">
            {{ form_label(form.ingredien) }}
            {{ form_widget(form.ingredien, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">{{ form_errors(form.ingredien) }}</div>
          </div>
        </div>


        <div class="form-group text-center">
          {{ form_row(form.submit, {'label': 'Créer ma recette', 'attr': {'class': 'btn btn-primary mt-4'}}) }}
        </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}

